% set the indentation at the beginning of a paragraph to zero
% for better lisibility in a manual style
\setlength{\parindent}{0pt} % Default is 15pt.
 
\pagestyle{headings}
 
% heading for the \chapter command.
\makeatletter
\renewcommand\@makechapterhead[1]{{
   \parindent 0pt\raggedright\LARGE \bf
   \ifnum \c@secnumdepth >\m@ne
      \@chapapp{} \thechapter.\ \ \fi
   #1\par\nobreak\vskip 20pt
}}
 
% heading for the \chapter* command.
\renewcommand\@makeschapterhead[1]{{
   \parindent 0pt\raggedright\LARGE \bf
   #1\par\nobreak\vskip 20pt
}}
 
% titles for the lists of figures and tables:
\renewcommand\listoffigures{
   \section*{List of Figures}
   \@starttoc{lof}
}
\renewcommand\listoftables{
   \section*{List of Tables}
   \@starttoc{lot}
}
 
\makeatother
 
% description lists:
\newcommand\madlabel[1]{#1\hfill}
\newcommand\madlist{\list{}{
   \setlength{\labelwidth}{2.3cm}
   \setlength{\leftmargin}{2.5cm}
   \let\makelabel\madlabel}
}
\let\endmadlist\endlist
 
\renewcommand\eqref[1]{Eqn.~\ref{#1}}
\newcommand\epem{e${}^+\)-e${}^-$}
 
% automatic indexing of keywords:
\newcommand\ttitem[1]{\item[{\tt #1}]\index{#1@{\tt #1}}}
\newcommand\ttitemn[1]{\item[{\tt #1}]}
%\newcommand\ttindex[1]{{\tt #1}\index{#1@{\tt #1}}}
\newcommand\ttindex[1]{\index{#1@{\uppercase{\tt #1}}}}

\newcommand\madsection[1]{\section{#1}\index{#1@{\uppercase{\tt #1}}}\label{sec:#1}}
 
% MAD command specifications:
\newcommand{\madbox}[1]{
   \begin{quote}
      \tt
      \fbox{
         \begin{minipage}{0.95\textwidth}
            \begin{tabbing}
               #1
            \end{tabbing}
         \end{minipage}
      }
   \end{quote}
}
 
% MAD command examples:
\newcommand{\madxmp}[1]{
   \begin{quote}
      \tt
      \begin{tabbing}
         #1
      \end{tabbing}
   \end{quote}
}
 
