# Online MAD-X

ifeq ($(ONLINE),yes)
LIBS += -Llib$(ARCH) -lSDDS1c -lSDDS1 -lrpnlib -lmdbmth -lmdblib -lgsl -lz
endif

# Garbage Collector

ifeq ($(USEGC),yes)
ifneq ($(OSTYPE),Windows)
LIBS += -Llibs$/gc -lgc$(ARCH)$(if $(findstring -intel,$@),-intel,-gnu)
endif
endif

# Libraries on Linux

ifeq ($(OSTYPE),Linux)
LIBS   += $(if $(call eq,$(ARCH),32),$(call libdir,/usr/lib),) -lX11
LDLIBS += -lstdc++ -lm
endif

# Libraries on MacOSX

ifeq ($(OSTYPE),Darwin)
ifeq ($(STATIC),yes)

	# X11
	X11PATH := /opt/local/lib/
	X11LIBS := libX11.a libxcb.a libXau.a libXdmcp.a
	ifneq ($(wildcard /opt/local/lib/),)
	LIBS  += $(wildcard $(addprefix $(X11PATH),$(X11LIBS)))
	else
	LIBS  += $(call libdir,/usr/X11/lib) -lX11
	endif

	# F90 (gfortran has weird order requirements, see make/linker.gfortran)
	LIBS  += $(wildcard $(call GNULIB,libquadmath.a))

else
	LIBS    += $(call libdir,/usr/X11/lib) -lX11
	LDLIBS  += -lstdc++ -lm
endif
endif

# Libraries on Windows

ifeq ($(OSTYPE),Windows)
ifneq ($(LDNAME),ifort)
LDLIBS += -lstdc++ -lm
endif
endif

# end of makefile
