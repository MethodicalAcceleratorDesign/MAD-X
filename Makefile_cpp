#
# defines
#

ifeq ($(DEBUG),yes)
CPPFLAGS += -D_ASSERT_DBG
endif

ifeq ($(ONLINE),yes)
CPPFLAGS += -D_ONLINE
endif

ifeq ($(NTPSA),yes)
CPPFLAGS += -D_NTPSA
endif

ifeq ($(USEGC),yes)
CPPFLAGS += -D_USEGC -DSTATIC=static $(call incdir,libs/gc/$(GCDIR)/include)

ifeq ($(OSTYPE),Windows)
CPPFLAGS += -DALL_INTERIOR_POINTERS -DGC_NOT_DLL -DDONT_USE_USER32_DLL
endif
endif

# end of makefile
