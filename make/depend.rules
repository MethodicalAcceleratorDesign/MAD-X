.PRECIOUS: $(OBJDIR)/%.d $(OBJDIR)/%.mod

vpath %.d    $(OBJDIR)
vpath %.mod  $(OBJDIR)

#
# rule for C dependencies
#
$(OBJDIR)/%.d: %.c
	$E "*** Computing $(@F)"
	$_ $(call CC_tr,$(CDEP) $(CPPFLAGS) $<) $(CDEP_tr) > $@

#
# rule for C++ dependencies
#
$(OBJDIR)/%.d: %.cpp
	$E "*** Computing $(@F)"
	$_ $(call CXX_tr,$(CXXDEP) $(CPPFLAGS) $<) $(CXXDEP_tr) > $@

#
# rule for f90 and F90 dependencies
#
$(OBJDIR)/%.d: %.f90
	$E "*** Computing $(@F)"
	$_ $(call FC_tr,$(FDEP) $<) $(FCDEP_tr) > $@

$(OBJDIR)/%.d: %.F90
	$E "*** Computing $(@F)"
	$_ $(call FC_tr,$(FDEP) $(CPPFLAGS) $<) $(FCDEP_tr) > $@

#
# compute dependencies
#
C_DEPS   := $(addprefix $(OBJDIR)/,$(patsubst %.c,%.d,$(CC_SRC)))
CXX_DEPS := $(addprefix $(OBJDIR)/,$(patsubst %.cpp,%.d,$(CXX_SRC)))
F_DEPS   := $(addprefix $(OBJDIR)/,$(patsubst %.F90,%.d,$(patsubst %.f90,%.d,$(FC_SRC))))
DEPENDS  :=

ifneq ($(CDEP),)
DEPENDS += $(C_DEPS)
endif

ifneq ($(CXXDEP),)
DEPENDS += $(CXX_DEPS)
endif

ifneq ($(FDEP),)
DEPENDS += $(F_DEPS)
endif

#
# include dependencies
#
ifneq ($(filter-out $(NOBUILD),$(MAKECMDGOALS)),)
-include $(DEPENDS)
endif

# end of makefile

